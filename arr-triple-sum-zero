// my solution
#include <stdio.h>
#include <stdlib.h>

int* createarr(int n){
    int *arr = malloc(n * sizeof(int));
    
    for(int i = 0; i < n; i++){
        scanf("%d", &arr[i]);
    };
    
    return arr;
}

void generatetriplets(int arr[],int n,int x){
    for(int i = 0; i < n ; i++){
        for(int j = (i + 1); j < n ; j++){
            for(int k = (j + 1); k < n; k++){
                if((arr[i] + arr[j] + arr[k]) == x){
                    printf("%d %d %d are triplets \n", arr[i], arr[j], arr[k]);
                };
            }
        }
    }
}

int main(){
    int n;
    printf("Enter number of elements for array :");
    scanf("%d", &n);
    
    int *arr;
    arr = createarr(n);
    generatetriplets(arr,n,0);
    
    return 0;
}

// geeks for geeks solution

#include <stdio.h>
#include <stdlib.h>

#define MAX_LIMIT 100 

void findTriplets(int arr[], int n, int res[][3], int* count) {
    *count = 0; 

    for (int i = 0; i < n - 2; i++) {
        for (int j = i + 1; j < n - 1; j++) {
            for (int k = j + 1; k < n; k++) {
              
               
                if (arr[i] + arr[j] + arr[k] == 0) {
                	res[*count][0] = i;
                    res[*count][1] = j;
                    res[*count][2] = k;
                    (*count)++; 
                }
            }
        }
    }
}

int main() {
    int arr[] = {0, -1, 2, -3, 1};
    int n = sizeof(arr) / sizeof(arr[0]);
  	
    int res[MAX_LIMIT][3]; 
  	
    int count = 0; 
    findTriplets(arr, n, res, &count);
    for (int i = 0; i < count; i++) 
        printf("%d %d %d\n", res[i][0], res[i][1], res[i][2]);
    
    return 0;
}
